{
    "name": "Snap",
    "id": "snap",
    "packaging_format": 1,
    "description": {
        "en": "Application 'Snap Build Your Own Blocks'",
        "fr": "Application 'Snap Build Your Own Blocks'",
    },
    "url": "https://github.com/jmoenig/Snap--Build-Your-Own-Blocks",
    "license": "GNU Affero General Public License",
    "version": "1.0",
    "maintainer": {
        "name": "Obani",
        "email": "obani@pi-et-ro.net",
        "url": "https://github.com/ObaniGemini/"
    },
    "requirements": {
        "yunohost": ">= 2.6.4"
    },
    "multi_instance": false,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for Snap",
                    "fr": "Choisissez un nom de domaine pour Snap"
                },
                "example": "my-server.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Snap",
                    "fr": "Choisissez un chemin pour Snap"
                },
                "example": "/snap",
                "default": "/snap"
            },
            {
                "name": "admin",
                "type": "user",
                "ask": {
                    "en": "Choose an admin user",
                    "fr": "Choisissez lâ€™administrateur"
                },
                "example": "johndoe"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            },
            {
                "name": "language",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["fr", "en"],
                "default": "fr"
            }
        ]
    }
}
